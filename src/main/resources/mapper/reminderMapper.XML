<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sicnu.consystem.Mapper.reminderMapper">

    <insert id="addMeetingReminder" parameterType="com.sicnu.consystem.Pojo.reminder">
        insert into reminder (uid,title,content) values (#{uid},#{title},#{content});
    </insert>
    <select id="getAllReminderByUserId" resultType="com.sicnu.consystem.Pojo.reminder">
        select * from reminder where uid=#{uid};
    </select>
</mapper>